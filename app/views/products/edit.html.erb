
<%= form_for @product do |product_form| %>
  Artist: <%= product_form.text_field :artist %>
  Album: <%= product_form.text_field :album_name %>
  Image URL: <%= product_form.text_field :image %>
  Stock: <%= product_form.number_field :stock %>
  Price: <%= product_form.number_field :price %>
  Active: <%= product_form.check_box :active %>
  <%= product_form.submit %>  

<% end %>

<form method="POST" action="<%=update_product_path(@product)%>">
