<div class="error">
    <ul>
    <% @merchant.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
</div>

<form class="form-style" action="/merchants/create" method="post" >
  <fieldset>
    <h1>New Merchant</h1>

    <div>
      <label for="name">Merchant Name: </label><br>
      <input placeholder = "Merchant Name" type="text" name="merchant[name]" %>
    </div>

    <br>

    <div>
      <label for="email">Email: </label><br>
      <input placeholder = "Email" type="string" name="merchant[email]" />
    </div>

    <br>

    <div>
      <label for="username">Username: </label><br>
      <input placeholder = "Username" type="string" name="merchant[username]" />
    </div>

    <br>

    <div>
      <label for="password">Password: </label><br>
      <input placeholder = "Password" type="password" name="merchant[password]" />
    </div>

    <br>

    <div>
      <label for="password">Re-enter password: </label><br>
      <input placeholder = "Re-enter password"type="password" name="holder">
    </div>


    <br>
    <div >
      <input type = "submit" value="Create Merchant Account" class="basic-button">

    </div>
    </fieldset>
</form>
