<form class="new_entry" action="/merchant" method="post" >
  <input type="hidden" name="_method" value="PUT">

  <h1>Edit Merchant</h1>

  <div>
    <label for="name">Company Name: </label>
    <input type="text" name="merchant[name]" value="<%= @merchant.name %>"/>
  </div>
  <div>
    <label for="email">Email: </label>
    <input type="string" name="merchant[email]" value="<%= @merchant.email %>"/>
  </div>
  <div>
    <label for="username">Username: </label>
    <input type="string" name="merchant[username]" value="<%= @merchant.username %>"/>
  </div>
  <div>
    <label for="password">Password: </label>
    <input type="password" name="merchant[password]" value="<%= @merchant.password %>"/>
  </div>

<br>

  <input type = "submit" value="Submit Merchant Information" class="submit">

</form>
