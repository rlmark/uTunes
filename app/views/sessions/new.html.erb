<form action="/sessions" method="post">
  <label for="merchant_username">Username:</label>
  <input type="string" name="merchant[username]" />
  <label for="merchant_password">Password:</label>
  <input type="password" name="merchant[password]" />
  <input type="submit" value="Sign In" class="submit"/>
</form><br>

<%= "Total Price of Current Cart: #{number_to_currency(@cart_total)}"%><br>

<%= link_to "Create New Merchant", "/merchants/new" %>



<div class="category_side_bar">
  <%= render "category_list" %>
</div>

