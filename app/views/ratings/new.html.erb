<div class="error"><!-- This pops up if validations fail -->
    <ul>
    <% @rating.errors.each do |column, message| %>
      <li>
        <strong><%= column.capitalize %></strong> <%= message %>
      </li>
    <% end %>
  </ul>
</div>
<div class="rateprod">
<h3>Rate <%= Product.find(params[:id]).album_name %> by <%= Product.find(params[:id]).artist %></h3>
<%= form_for @rating do |f| %>
  <%= f.hidden_field :product_id, value: params[:id] %>
  <p>Stars: <%= f.number_field :stars %></p>
  <p>Comments: <%= f.text_field :comments %></p>
  <br>
  <%= f.submit %>
<% end %>
</div>


